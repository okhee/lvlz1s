{{>layout/header}}
<link href="/css/signin.css" rel="stylesheet">

<div class="text-center">
    <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    {{#loginUserName}}
        <h3>Login successful!</h3>
        <h4>username = {{loginUserName}}</h4>
    {{/loginUserName}}
    {{^loginUserName}}
        <form class="form-signin" action="/register" method="post">
            <h1 class="h3 mb-3 font-weight-normal">로그인</h1>
            <label for="inputUserName" class="sr-only">닉네임</label>
            <input type="text" name="loginUserName" id="inputUserName" class="form-control" placeholder="닉네임 입력 .." required autofocus>
            <br>
            <button class="btn btn-lg btn-primary btn-block" type="submit">비회원 로그인</button>
        </form>
    {{/loginUserName}}
    <p class="mt-5 mb-3 text-muted">&copy; 2014-2021</p>
</div>

{{>layout/footer}}
